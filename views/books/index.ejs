<h2 class="page-header">
    All Books
</h2>
<div class="form-row">
    <div class="form-item">
        <label>Title</label>
        <form action="/books" method="GET">
        <input type="text" placeholder="Book title" name="title" value="<%=searchOptions.title%>">
    </div>
</div>
<div class="form-row">

    <div class="form-item">
        <label>Published After</label>
        <form action="/books" method="GET">
        <input type="date"  name="publishedAfter" value="<%=searchOptions.publishedAfter%>">
    </div>
    <div class="form-item">
        <label>Published Before</label>
        <form action="/books" method="GET">
            <input type="date"  name="publishedBefore" value="<%=searchOptions.publishedBefore%>">
    </div>
</div>
<div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
</div>
    </form>
<div>
    <% books.forEach(book => {  %>
        <a href="books/<%= book.id %>">
            <img height="150" width="100" src="<%= book.coverImagePath %>" alt="">
        </a>
    <% }) %> 
</div>